<odoo>
  <data>

    <!--L'etiqueta include et permet relacionar fitxers xml dins d'un altre fitxer, en aquest cas, 
    tot el relacionat amb categoria va a un altre arxiu que s'enllaça aqui.-->
    <include file="categoria_view.xml"></include>

    <!-- LLISTA -->
    <record model="ir.ui.view" id="inventario_harmonia.inventario_list_view">
      <field name="name">inventario_harmonia_inventario_view_list</field>
      <field name="model">inventario_harmonia.inventario</field>
      <field name="arch" type="xml">
        <tree string="Inventario">
          <field name="nom"/>
          <field name="categoria_id"/>
          <field name="cantidad"/>
          <field name="precio" />
          <field name="precio_venta" />
          <field name="marca" />
          <field name="categoria" />
          <field name="obj_perdut" />
          <field name="fecha_caducidad"/>
        </tree>
      </field>
    </record>

    <!-- FORMULARI -->
    <record model="ir.ui.view" id="nventario_harmonia.inventario_view_form">
      <field name="name">inventario_harmonia_inventario_view_form</field>
      <field name="model">inventario_harmonia.inventario</field>
      <field name="arch" type="xml">
          <form string="Inventario">
              <sheet>
                  <group>
                    <field name="nom"/>
                    <field name="descripcion"/>
                    <field name="categoria_id"/>
                    <field name="cantidad"/>
                    <field name="precio" />
                    <field name="precio_venta" />
                    <field name="marca" />
                    <field name="categoria" />
                    <field name="obj_perdut" />
                    <field name="fecha_caducidad"/>
                  </group>
                  <!--ELS BUTONS VAN A SOBRE I DINS DEL FORMULARI-->
                  <footer>
                    <button name="action_crear_producto" type="object" string="Añadir Producto" class="btn-primary"/>
                    <button name="action_modificar_producto" type="object" string="Guardar Cambios" class="btn-primary"/>
                    <button name="action_reducir_cantidad" type="object" string="Reducir Cantidad" class="btn-secondary"/>
                </footer>
              </sheet>
          </form>
      </field>
    </record>

    <!-- ACCIONS: 1ª crear un producte, 2ª modifica un producte, 3ª redueix quantitat d'un producte -->
    <record id="action_crear_produco" model="ir.actions.server">
      <field name="name">Crear Producto</field>
      <field name="model_id" ref="model_inventario_harmonia_inventario" />
      <field name="state">code</field>
      <field name="code">model.crear_producto()</field>
    </record>


    <record id="action_modificar_producto" model="ir.actions.server">
      <field name="name">Modificar Producto</field>
      <field name="model_id" ref="model_inventario_harmonia_inventario" />
      <field name="state">code</field>
      <field name="code">model.modificar_producto_btn()</field>
    </record>


    <record id="action_reduir_cantidad" model="ir.actions.server">
      <field name="name">Reducir Cantidad</field>
      <field name="model_id" ref="model_inventario_harmonia_inventario" />
      <field name="state">code</field>
      <field name="code">model.reduir_cantidad(cantidad_red)</field>
    </record>


    <menuitem name="Inventario" id="inventario_harmonia.menu_root"/> <!--MENU BASE-->

    <menuitem name="Productos" id="inventario_harmonia.menu_producto" parent="inventario_harmonia.menu_root" sequence="1"/> <!--MENU PRODUCTOS-->

    <menuitem name="Lista de Productos" id="inventario_harmonia.menu_producto_list" parent="inventario_harmonia.menu_producto" action="action_inventario_list"/><!--SUBMENUS-->
    <menuitem name="Crear Producto" id="inventario_harmonia.menu_producto_form" parent="inventario_harmonia.menu_producto" action="action_inventario_form"/>

    <!--ACTIONS DEL MENU-->
    <record id="action_inventario_list" model="ir.actions.act_window">
      <field name="name">Lista de productos</field>
      <field name="res_model">inventario_harmonia.inventario</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="action_inventario_form" model="ir.actions.act_window">
      <field name="name">Crear producto</field>
      <field name="res_model">inventario_harmonia.inventario</field>
      <field name="view_mode">form</field>
    </record>

  </data>
</odoo>