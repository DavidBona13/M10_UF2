<odoo>
  <data>
    <record id="facturacion_harmonia_facturacio_view_form" model="ir.ui.view">
      <field name="name">facturacion_harmonia.facturacio.form</field>
      <field name="model">facturacion_harmonia.facturacio</field>
      <field name="arch" type="xml">
        <form string="Factura">
          <sheet>
            <group>
              <field name="nom" />
              <field name="client_id" />
              <field name="date_factura" />
              <field name="total"/>
            </group>
            <field name="lineas_factura">
              <tree string="Líneas de Factura">
                <field name="producto_id" />
                <field name="cantidad" />
                <field name="preu_unit" />
                <field name="subtotal" />
              </tree>
            </field>
          </sheet>
        </form>
      </field>
    </record>

    <!--LLISTA DE FACTURES-->
    <record id="facturacion_harmonia_facturacio_view_tree" model="ir.ui.view">
      <field name="name">facturacion_harmonia.facturacio.tree</field>
      <field name="model">facturacion_harmonia.facturacio</field>
      <field name="arch" type="xml">
          <tree string="Facturas">
              <field name="nom"/>
              <field name="client_id"/>
              <field name="date_factura"/>
              <field name="total" />
          </tree>
      </field>
  </record>


  <menuitem id="facturacion_harmonia.menu_root" name="Facturación" />

    <!--MENU I SUBMENU-->
  <menuitem id="facturacion_harmonia_menu_facturacio" name="Gestión de Facturación" parent="facturacion_harmonia.menu_root"/>
  <menuitem id="menu_facturacion_harmonia_facturas" name="Facturas" parent="facturacion_harmonia_menu_facturacio" action="action_factures"/>

  <record id="action_factures" model="ir.actions.act_window">
      <field name="name">Facturas</field>
      <field name="res_model">facturacion_harmonia.facturacio</field>
      <field name="view_mode">tree,form</field>
  </record>

  </data>
</odoo>