<odoo>
  <data>
    <record id="view_inventario_list" model="ir.ui.view">
      <field name="name">inventario.inventario.list</field>
      <field name="model">inventario.inventario</field>
      <field name="arch" type="xml">
        <tree string="Inventario">
          <field name="nom"/>
          <field name="categoria_id"/>
          <field name="cantidad"/>
          <field name="precio" />
          <field name="precio_venta" />
          <field name="marca" />
          <field name="categoria" />
          <field name="obj_perdut" />
          <field name="fecha_caducidad"/>
        </tree>
      </field>
    </record>

    <record id="view_inventario_form" model="ir.ui.view">
      <field name="name">inventario.inventario.form</field>
      <field name="model">inventario.inventario</field>
      <field name="arch" type="xml">
          <form string="Inventario">
              <sheet>
                  <group>
                    <field name="nom"/>
                    <field name="descripcion"/>
                    <field name="categoria_id"/>
                    <field name="cantidad"/>
                    <field name="precio" />
                    <field name="precio_venta" />
                    <field name="marca" />
                    <field name="categoria" />
                    <field name="obj_perdut" />
                    <field name="fecha_caducidad"/>
                  </group>
                  <footer>
                    <button name="crear_producto_button" type="object" string="AÃ±adir Producto" class="btn-primary" attrs="{'invisible': [('id', '!=', False)]}"/>
                    <button name="modificar_producto_btn" type="object" string="Guardar Cambios" class="btn-primary" attrs="{'invisible': [('id', '=', False)]}"/>
                    <button name="reducir_cantidad_boton" type="object" string="Reducir Cantidad" class="btn-secondary"/>
                </footer>
              </sheet>
          </form>
      </field>
  </record>

  <menuitem name="Inventario" id="inventario.menu_root"/>
  
