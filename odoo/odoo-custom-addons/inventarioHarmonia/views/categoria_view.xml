<odoo>
    <record id="view_categoria_list" model="ir.ui.view">
        <field name="name">inventario.categoria.list</field>
        <field name="model">inventario.categoria</field>
        <field name="arch" type="xml">
            <tree string="Categorías de Inventario">
                <field name="nom"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <record id="view_categoria_form" model="ir.ui.view">
        <field name="name">inventario.categoria.form</field>
        <field name="model">inventario.categoria</field>
        <field name="arch" type="xml">
            <form string="Categoría de Inventario">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>